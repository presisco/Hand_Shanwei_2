    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="fill_parent"
                android:text="失控"
                android:id="@+id/bookNameTextView"
                android:textSize="@dimen/small_text"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="三楼"
                android:id="@+id/bookPosTextView"
                android:textSize="@dimen/medium_text"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="G303-49/10"
                android:id="@+id/bookIdTextView"
                android:textSize="@dimen/small_text"
                android:layout_below="@+id/bookNameTextView" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="fill_parent"
                android:text="(美)凯文*凯丽著 新星出版社 2010"
                android:id="@+id/bookAuthorTextView"
                android:textSize="@dimen/very_small_text" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="剩余0本,共3本"
                android:layout_weight="2"
                android:id="@+id/bookCountTextView"
                android:textSize="@dimen/small_text"
                android:layout_alignBottom="@+id/bookAuthorTextView"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:id="@+id/bookMapImageView"
                android:layout_height="40dp"
                android:background="@drawable/map"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/bookAuthorTextView" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="fill_parent" />

            <ToggleButton
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/add_on"
                android:layout_height="fill_parent"
                android:id="@+id/btnsavemap"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>